package com.wesring.lab1;

import java.util.Scanner;

/*
 * Define: Input scanner
 * Input
 * Output speed, with math
 */
public class Exer2 {
	public static void main(String[] args){
			System.out.println("What is your speed?");
			System.out.print(">");
			Scanner input = new Scanner(System.in);
			
			try{
				System.out.println("Your bill with 15% tip is $" + (input.nextDouble() * 1.15));
			} catch (IndexOutOfBoundsException e) {
				System.out.print("Thats not valid money.");
			}
			System.out.println("---------Good Bye---------");
	}
}
